<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.een.LoginActivity"
    android:background="@color/colorBackground">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_account"
        android:maxLength="20"
        android:hint="@string/txt_hint_account"
        android:singleLine="true"
        android:layout_above="@+id/edit_password"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorText" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_password"
        android:maxLength="20"
        android:hint="@string/txt_hint_password"
        android:singleLine="true"
        android:layout_above="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorHint" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/btn_login_name"
        android:id="@+id/btn_login"
        android:background="@color/colorButton"
        android:layout_above="@+id/btn_SignUp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_register_name"
        android:id="@+id/btn_SignUp"
        android:background="@color/colorButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:background="@drawable/car"
        android:layout_above="@+id/edit_account"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />
</RelativeLayout>
